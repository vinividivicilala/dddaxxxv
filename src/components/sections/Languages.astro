---
import { languages } from "@cv-es";

import Section from "@/components/Section.astro";
---

<Section title="Languages">
  <ul>
    {
      languages.map(({ language, fluency }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{language}</h3>
                </div>
              </header>
              <footer>
                <p>{fluency}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
